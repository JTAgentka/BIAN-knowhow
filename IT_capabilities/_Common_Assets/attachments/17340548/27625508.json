{
  "type": "object",
  "title": "FxRatesDaily",
  "description": "Bank daily exchange rates",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "definitions": {
    "currencyRate": {
      "type": "object",
      "required": [
        "baseCurrency",
        "baseAmount",
        "quoteCurrency"
      ],
      "properties": {
        "quoteCurrency": {
          "pattern": "^[A-Z]{3}$",
          "description": "ISO 4217 currency code of quote currency",
          "type": "string",
          "title": "Quote currency"
        },
        "middle": {
          "type": [
            "number",
            "null"
          ],
          "title": "Middle",
          "description": "Middle rate"
        },
        "baseCurrency": {
          "pattern": "^[A-Z]{3}$",
          "description": "ISO 4217 currency code of base currency",
          "type": "string",
          "title": "Base currency"
        },
        "baseAmount": {
          "type": "integer",
          "title": "Base amount",
          "description": "The amount of base currency"
        }
      }
    }
  },
  "required": [
    "fxRateListId",
    "validityDate",
    "businessChangeDate"
  ],
  "properties": {
    "fxRateListId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "title": "FxRate Id",
      "description": "Exchange rate list identifier"
    },
    "X-Correlation-ID": {
      "type": [
        "string",
        "null"
      ],
      "title": "X-Correlation-ID",
      "description": "Correlation identifier"
    },
    "validityDate": {
      "type": "string",
      "format": "date",
      "title": "Validity date",
      "description": "The date of the beginning of the exchange rate list validity"
    },
    "businessChangeDate": {
      "type": "string",
      "format": "date-time",
      "title": "Business change date",
      "description": "Date and time of publication of the change"
    },
    "status": {
      "title": "Code book status",
      "description": "Code book status",
      "enum": [
        "deleted",
        "active"
      ],
      "type": [
        "string",
        "null"
      ]
    },
    "currencyRates": {
      "type": [
        "array",
        "null"
      ],
      "description": "Currency rates",
      "items": {
        "$ref": "#/definitions/currencyRate"
      }
    }
  }
}