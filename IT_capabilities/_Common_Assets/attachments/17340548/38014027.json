{
  "title": "depreciationOfInitialValue",
  "description": "Depreciation of initial value confirmation schema",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "confirmationId",
    "owner",
    "confirmationTypeId",
    "documentLanguage",
    "generatedDate",
    "insertedDate",
    "businessChangeDate",
    "stateId",
    "depreciationOfInitialValue"
  ],
  "properties": {
    "X-Correlation-ID": {
      "description": "Korelační identifikátor, povinné pro INIT a RECON",
      "type": [
        "string",
        "null"
      ]
    },
    "confirmationId": {
      "type": "integer",
      "description": "Id dokumentu"
    },
    "owner": {
      "type": "object",
      "description": "Detaily vlastníka",
      "$ref": "#/definitions/person"
    },
    "portfolioIds": {
      "type": "object",
      "description": "Identifikátory portfolia",
      "$ref": "#/definitions/portfolioIds"
    },
    "confirmationTypeId": {
      "description": "Hodnoty odkazující na typ konfirmace(bis10, ocp01,ocp03, ocp04, ocp06, ocp08, ocp10, ocp12, ocp13, ocp14, ocp24, ocp37, ocp39, ocp40, ocp41, ocp43, ocp44, ocp45, ocp46)",
      "type": "string"
    },
    "documentLanguage": {
      "description": "Jazyk dokumentu - CZE, ENG, SLO",
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "generatedDate": {
      "description": "čas vygenerování dokumentu",
      "type": "string",
      "format": "date-time"
    },
    "insertedDate": {
      "description": "čas vložení záznamu do db",
      "type": "string",
      "format": "date-time"
    },
    "businessChangeDate": {
      "description": "Poslední změna statusu",
      "type": "string",
      "format": "date-time"
    },
    "stateId": {
      "description": "status zpracování - status=9(posláno do CRM)  nebo 10 (chyba), ostatní nejsou relevantní",
      "type": "integer"
    },
    "files": {
      "description": "Soubory které jsou součástí výpisu",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "required": [
          "contentType",
          "fileName"
        ],
        "properties": {
          "contentType": {
            "description": "Typ obsahu",
            "type": "string",
            "minLength": 0,
            "maxLength": 20
          },
          "fileName": {
            "description": "Jméno souboru",
            "type": "string",
            "minLength": 0,
            "maxLength": 100
          }
        }
      }
    },
    "depreciationOfInitialValue": {
      "type": "object",
      "required": [
        "securityName"
      ],
      "properties": {
        "tradeIds": {
          "type": "object",
          "description": "Identifikátory obchodu",
          "$ref": "#/definitions/tradeIds"
        },
        "sourceSystem": {
          "description": "TOP - topas BL bloter",
          "type": [
            "string",
            "null"
          ]
        },
        "securityId": {
          "description": "ID papíru",
          "type": [
            "integer",
            "null"
          ]
        },
        "isin": {
          "description": "ISIN",
          "type": [
            "string",
            "null"
          ]
        },
        "securityName": {
          "description": "Název cenného papíru/kontraktu",
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "portfolioIds": {
      "description": "Identifikátory portfolia",
      "type": "object",
      "properties": {
        "topasId": {
          "type": [
            "integer",
            "null"
          ],
          "description": "Identifikace Portfolia v TOPAS (KID)"
        },
        "taId": {
          "type": [
            "integer",
            "null"
          ],
          "description": "Identifikace Účtu podílníka v TA"
        }
      }
    },
    "person": {
      "description": "Detaily osoby",
      "type": "object",
      "required": [
        "crmId"
      ],
      "properties": {
        "crmId": {
          "type": "string",
          "description": "Unikátní CRM identifikátor",
          "minLength": 10,
          "maxLength": 10
        }
      }
    },
    "tradeIds": {
      "description": "Identifikátory obchodu",
      "type": "object",
      "properties": {
        "blotterId": {
          "type": [
            "string",
            "null"
          ],
          "description": "ID obchodu z Blotteru",
          "minLength": 1,
          "maxLength": 50
        }
      }
    }
  }
}