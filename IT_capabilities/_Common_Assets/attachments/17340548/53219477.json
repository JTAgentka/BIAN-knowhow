{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://acmark.com/jtb/ActivityAppointmentSchema.json",
  "description": "CRM Appointment Activity Schema",
  "type": "object",
  "required": [
    "activityIds",
    "timestamp",
    "appointmentData",
    "state"
  ],
  "properties": {
    "X-Correlation-ID": {
      "type": [
        "string",
        "null"
      ],
      "description": "Korelační identifikátor pro inicializaci a rekonciliaci"
    },
    "activityIds": {
      "type": "object",
      "properties": {
        "crmActivityId": {
          "type": [
            "string",
            "null"
          ],
          "format": "uuid",
          "description": "Interní CRM GUID primární klíč, vždy vyplněno"
        },
        "dcActivityId": {
          "type": "string",
          "description": "Identifikátor aktivity v digitálních kanálech"
        }
      },
      "required": ["dcActivityId"],
      "description": "Objekt s identifikátory aktivity"
    },
    "action": {
      "description": "Typ operace. NULL pro rekonciliaci/inicializaci.",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "create",
            "update",
            "delete"
          ]
        },
        {"type": "null"}
      ]
    },
    "timestamp": {
      "description": "Datum a čas operace",
      "type": "string",
      "format": "date-time"
    },
    "appointmentData": {
      "description": "Data schůzky",
      "type": "object",
      "required": [
        "subject",
        "scheduledStart",
        "scheduledEnd",
        "ownerId",
        "description"
      ],
      "properties": {
        "subject": {
          "description": "Předmět/název schůzky",
          "type": "string"
        },
        "regardingObjectIds": {
          "description": "Identifikace záznamu, kterého se aktivita týká.",
          "oneOf": [
            {"type": "null"},
            {"$ref": "#/definitions/EntityReference"}
          ]
        },
        "meetingPlace": {
          "description": "Místo schůzky",
          "type": [
            "string",
            "null"
          ]
        },
        "description": {
          "description": "Popis schůzky",
          "type": "string"
        },
        "meetingMinutes": {
          "description": "Zápis z jednání",
          "type": [
            "string",
            "null"
          ]
        },
        "transportType": {
          "description": "Doprava na schůzku",
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "value": {
                  "description": "Hodnota CRM enumerátoru/OptionSetu",
                  "type": "integer",
                  "examples": [
                    500000000,
                    500000001
                  ]
                },
                "label": {
                  "description": "Popisek číselníkové hodnoty z CRM",
                  "type": "string",
                  "examples": [
                    "Interní řidič",
                    "Taxík"
                  ]
                }
              }
            },
            {"type": "null"}
          ]
        },
        "scheduledStart": {
          "description": "Čas zahájení",
          "type": "string",
          "format": "date-time"
        },
        "scheduledEnd": {
          "description": "Čas ukončení",
          "type": "string",
          "format": "date-time"
        },
        "scheduledDurationMinutes": {
          "description": "Doba trvání",
          "type": [
            "integer",
            "null"
          ]
        },
        "isAllDayEvent": {
          "description": "Celodenní událost",
          "type": "boolean"
        },
        "ownerId": {
          "type": "string",
          "description": "Vlastník aktivity (bankéř, apicode)",
          "examples": ["JTBA\\JT8100008"]
        },
        "requiredAttendeesIds": {
          "description": "Povinní účastníci",
          "type": "array",
          "items": {
            "description": "Účastník, dostupný pouze GUID",
            "$ref": "#/definitions/EntityReference"
          }
        },
        "optionalAttendeesIds": {
          "description": "Nepovinní účastníci",
          "type": "array",
          "items": {
            "description": "Účastník, dostupný pouze GUID",
            "$ref": "#/definitions/EntityReference"
          }
        },
        "note": {
          "description": "Poznámky",
          "type": "array",
          "items": {
            "description": "Objekt poznámky",
            "type": "object",
            "required": ["annotationId"],
            "properties": {
              "annotationId": {
                "description": "ID poznámky v CRM",
                "type": "string",
                "format": "uuid"
              },
              "subject": {
                "description": "Předmět",
                "type": [
                  "string",
                  "null"
                ]
              },
              "text": {
                "description": "Text poznámky",
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          }
        },
        "attachments": {
          "type": "array",
          "description": "Přílohy",
          "items": {
            "type": "object",
            "required": [
              "attachmentId",
              "attachmentUrl",
              "filename",
              "filesize"
            ],
            "description": "Objekt přílohy",
            "properties": {
              "attachmentId": {
                "type": "string",
                "format": "uuid",
                "description": "ID přílohy v CRM"
              },
              "attachmentUrl": {
                "type": "string",
                "description": "Deeplink do CRM"
              },
              "filename": {
                "type": "string",
                "description": "Název souboru přílohy"
              },
              "filesize": {
                "type": "integer",
                "title": "Velikost přílohy v bytech"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "EntityReference": {
      "type": [
        "object",
        "null"
      ],
      "required": [
        "crmId",
        "idType"
      ],
      "properties": {
        "idValue": {
          "type": [
            "string",
            "null"
          ],
          "format": "uuid",
          "description": "GUID záznamu v CRM."
        },
        "idType": {
          "type": "string",
          "enum": [
            "account",
            "contact",
            "systemuser"
          ],
          "description": "Typ návazného záznamu v CRM."
        },
        "crmId": {
          "type": "string",
          "description": "KLID záznamu, je-li k dispozici. (pro systemuser JT user)"
        },
        "name": {
          "type": [
            "string",
            "null"
          ],
          "description": "Název (label) záznamu v CRM."
        }
      },
      "description": "Informace o návazném záznamu."
    }
  }
}