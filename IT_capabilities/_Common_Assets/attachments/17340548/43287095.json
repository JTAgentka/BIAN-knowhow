{
  "title": "fxForward",
  "description": "FX forward",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "confirmationId",
    "owner",
    "confirmationTypeId",
    "documentLanguage",
    "generatedDate",
    "insertedDate",
    "businessChangeDate",
    "stateId",
    "fxForward"
  ],
  "properties": {
    "X-Correlation-ID": {
      "description": "Korelační identifikátor, povinné pro INIT a RECON",
      "type": [
        "string",
        "null"
      ]
    },
    "confirmationId": {
      "type": "integer",
      "description": "Id dokumentu"
    },
    "owner": {
      "type": "object",
      "description": "Detaily vlastníka",
      "$ref": "#/definitions/person"
    },
    "portfolioIds": {
      "type": "object",
      "description": "Identifikátory portfolia",
      "$ref": "#/definitions/portfolioIds"
    },
    "confirmationTypeId": {
      "description": "Hodnoty odkazující na typ konfirmace(bis10, ocp01,ocp03, ocp04, ocp06, ocp08, ocp10, ocp12, ocp13, ocp14, ocp24, ocp37, ocp39, ocp40, ocp41, ocp43, ocp44, ocp45, ocp46)",
      "type": "string"
    },
    "documentLanguage": {
      "description": "Jazyk dokumentu - CZE, ENG, SLO",
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "generatedDate": {
      "description": "čas vygenerování dokumentu",
      "type": "string",
      "format": "date-time"
    },
    "insertedDate": {
      "description": "čas vložení záznamu do db",
      "type": "string",
      "format": "date-time"
    },
    "businessChangeDate": {
      "description": "Poslední změna statusu",
      "type": "string",
      "format": "date-time"
    },
    "stateId": {
      "description": "status zpracování - status=9(posláno do CRM)  nebo 10 (chyba), ostatní nejsou relevantní",
      "type": "integer"
    },
    "files": {
      "description": "Soubory které jsou součástí výpisu",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "required": [
          "contentType",
          "fileName"
        ],
        "properties": {
          "contentType": {
            "description": "Typ obsahu",
            "type": "string",
            "minLength": 0,
            "maxLength": 20
          },
          "fileName": {
            "description": "Jméno souboru",
            "type": "string",
            "minLength": 0,
            "maxLength": 100
          }
        }
      }
    },
    "fxForward": {
      "type": "object",
      "required": [
        "tradeIds",
        "buyPrice",
        "buyCurrency",
        "sellPrice",
        "buyAccount",
        "sellAccount",
        "managingCompanyTag"
      ],
      "properties": {
        "transactionDate": {
          "description": "Datum transakce",
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "tradeIds": {
          "type": "object",
          "description": "Identifikátory obchodu",
          "$ref": "#/definitions/tradeIds"
        },
        "settlementDate": {
          "description": "Datum vypořádání",
          "type": [
            "string",
            "null"
          ],
          "format": "date"
        },
        "buyPrice": {
          "description": "Částka nakupované měny",
          "type": "number"
        },
        "buyCurrency": {
          "description": "Měna nakupované měny",
          "type": "string",
          "minLength": 3,
          "maxLength": 3
        },
        "fxRate": {
          "description": "Kurz",
          "type": [
            "number",
            "null"
          ]
        },
        "sellPrice": {
          "description": "Částka prodávané měny",
          "type": "number"
        },
        "sellCurrency": {
          "description": "Měna prodávané měny",
          "type": [
            "string",
            "null"
          ],
          "minLength": 3,
          "maxLength": 3
        },
        "buyAccount": {
          "description": "Účet nakupované měny",
          "type": "string",
          "minLength": 1,
          "maxLength": 60
        },
        "sellAccount": {
          "description": "Účet nakupované měny",
          "type": "string",
          "minLength": 1,
          "maxLength": 60
        },
        "managingCompanyTag": {
          "description": "Příslušnost portfolia ke společnosti - barva klienta. silver - J&T ČR, green - J&T SR",
          "type": "string",
          "enum": [
            "SILVER",
            "GREEN"
          ]
        },
        "newOrChangeLabel": {
          "description": "popis zda se jedná ozměnovou konfirmaci v jazyce klienta",
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "maxLength": 30
        },
        "newOrChange": {
          "description": "NEW/CHANGE - jestli mění stávající konfirmaci",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "NEW",
            "CHANGE",
            null
          ]
        }
      }
    }
  },
  "definitions": {
    "portfolioIds": {
      "description": "Identifikátory portfolia",
      "type": "object",
      "properties": {
        "topasId": {
          "type": [
            "integer",
            "null"
          ],
          "description": "Identifikace Portfolia v TOPAS (KID)"
        },
        "taId": {
          "type": [
            "integer",
            "null"
          ],
          "description": "Identifikace Účtu podílníka v TA"
        }
      }
    },
    "person": {
      "description": "Detaily osoby",
      "type": "object",
      "required": [
        "crmId"
      ],
      "properties": {
        "crmId": {
          "type": "string",
          "description": "Unikátní CRM identifikátor",
          "minLength": 10,
          "maxLength": 10
        }
      }
    },
    "tradeIds": {
      "description": "Identifikátory obchodu",
      "type": "object",
      "required": [
        "topasIdNumber",
        "topasIdSeq"
      ],
      "properties": {
        "topasIdNumber": {
          "type": "integer",
          "description": "Identifikace Čísla Výsledku v TOPAS"
        },
        "topasIdSeq": {
          "type": "integer",
          "description": "Identifikace Pořadí Výsledku v TOPAS"
        }
      }
    }
  }
}