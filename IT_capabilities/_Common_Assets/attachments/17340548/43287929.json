{
  "title": "repoTrades",
  "description": "Repo Trades",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "confirmationId",
    "owner",
    "confirmationTypeId",
    "documentLanguage",
    "generatedDate",
    "insertedDate",
    "businessChangeDate",
    "stateId",
    "repoTrades"
  ],
  "properties": {
    "X-Correlation-ID": {
      "description": "Korelační identifikátor, povinné pro INIT a RECON",
      "type": [
        "string",
        "null"
      ]
    },
    "confirmationId": {
      "type": "integer",
      "description": "Id dokumentu"
    },
    "owner": {
      "type": "object",
      "description": "Detaily vlastníka",
      "$ref": "#/definitions/person"
    },
    "portfolioIds": {
      "type": "object",
      "description": "Identifikátory portfolia",
      "$ref": "#/definitions/portfolioIds"
    },
    "confirmationTypeId": {
      "description": "Hodnoty odkazující na typ konfirmace(bis10, ocp01,ocp03, ocp04, ocp06, ocp08, ocp10, ocp12, ocp13, ocp14, ocp24, ocp37, ocp39, ocp40, ocp41, ocp43, ocp44, ocp45, ocp46)",
      "type": "string"
    },
    "documentLanguage": {
      "description": "Jazyk dokumentu - CZE, ENG, SLO",
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "generatedDate": {
      "description": "čas vygenerování dokumentu",
      "type": "string",
      "format": "date-time"
    },
    "insertedDate": {
      "description": "čas vložení záznamu do db",
      "type": "string",
      "format": "date-time"
    },
    "businessChangeDate": {
      "description": "Poslední změna statusu",
      "type": "string",
      "format": "date-time"
    },
    "stateId": {
      "description": "status zpracování - status=9(posláno do CRM)  nebo 10 (chyba), ostatní nejsou relevantní",
      "type": "integer"
    },
    "files": {
      "description": "Soubory které jsou součástí výpisu",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "required": [
          "contentType",
          "fileName"
        ],
        "properties": {
          "contentType": {
            "description": "Typ obsahu",
            "type": "string",
            "minLength": 0,
            "maxLength": 20
          },
          "fileName": {
            "description": "Jméno souboru",
            "type": "string",
            "minLength": 0,
            "maxLength": 100
          }
        }
      }
    },
    "repoTrades": {
      "type": "object",
      "required": [
        "securityName",
        "isin",
        "quantity",
        "firstLeg",
        "secondLeg"
      ],
      "properties": {
        "counterParty": {
          "description": "označení protistrany dle MIFID v jazyku klienta, vždy protistrana nebo counterparty, nebo obchodník/broker",
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "maxLength": 20
        },
        "transactionDate": {
          "description": "Datum transakce",
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "orderType": {
          "description": "překlad typu obchodu, z číselníku typu obchodu z produktu/výsledku",
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "maxLength": 30
        },
        "orderPlaceRealization": {
          "description": "identifikace trhu nebo XOFF",
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "maxLength": 250
        },
        "securityName": {
          "description": "Název cenného papíru",
          "type": "string",
          "minLength": 1,
          "maxLength": 250
        },
        "isin": {
          "description": "ISIN",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "quantity": {
          "description": "počet kusů cenného papíru",
          "type": "number"
        },
        "newOrChangeLabel": {
          "description": "popis zda se jedná ozměnovou konfirmaci v jazyce klienta",
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "maxLength": 30
        },
        "managingCompanyTag": {
          "description": "Příslušnost portfolia ke společnosti - barva klienta. silver - J&T ČR, green - J&T SR",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "SILVER",
            "GREEN",
            null
          ]
        },
        "newOrChange": {
          "description": "NEW/CHANGE - jestli mění stávající konfirmaci",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "NEW",
            "CHANGE",
            null
          ]
        },
        "counterPartyName": {
          "description": "název skutečné protistrana obchodu",
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "maxLength": 283
        },
        "firstLeg": {
          "type": "object",
          "description": "První noha / spotový prodej cizí měny",
          "$ref": "#/definitions/spotLeg"
        },
        "secondLeg": {
          "type": "object",
          "description": "Druhá noha /  forwardový nákup",
          "$ref": "#/definitions/forwardLeg"
        }
      }
    }
  },
  "definitions": {
    "portfolioIds": {
      "description": "Identifikátory portfolia",
      "type": "object",
      "properties": {
        "topasId": {
          "type": [
            "integer",
            "null"
          ],
          "description": "Identifikace Portfolia v TOPAS (KID)"
        },
        "taId": {
          "type": [
            "integer",
            "null"
          ],
          "description": "Identifikace Účtu podílníka v TA"
        }
      }
    },
    "person": {
      "description": "Detaily osoby",
      "type": "object",
      "required": [
        "crmId"
      ],
      "properties": {
        "crmId": {
          "type": "string",
          "description": "Unikátní CRM identifikátor",
          "minLength": 10,
          "maxLength": 10
        }
      }
    },
    "tradeIds": {
      "description": "Identifikátory obchodu",
      "type": "object",
      "required": [
        "topasIdNumber",
        "topasIdSeq"
      ],
      "properties": {
        "topasIdNumber": {
          "type": "integer",
          "description": "Identifikace Čísla Výsledku v TOPAS"
        },
        "topasIdSeq": {
          "type": "integer",
          "description": "Identifikace Pořadí Výsledku v TOPAS"
        }
      }
    },
