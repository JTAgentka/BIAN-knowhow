        },
        "instrumentPrice": {
          "description": "cena za jeden kus cenného papíru",
          "type": [
            "number",
            "null"
          ]
        },
        "transactionValue": {
          "description": "objem obchodu včetně AUV bez poplatku ve měně obchodu",
          "type": [
            "number",
            "null"
          ]
        },
        "transactionCurrency": {
          "description": "měna obchodu",
          "type": "string",
          "minLength": 3,
          "maxLength": 3
        },
        "interestRate": {
          "description": "spot - úrok z repa",
          "type": "number"
        },
        "transactionFee": {
          "description": "poplatek transakce",
          "type": [
            "number",
