{
  "title": "Balance",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Balance",
  "type": "object",
  "required": [
    "X-Correlation-ID",
    "accountId",
    "accountKind",
    "eventTimestamp",
    "actualBalance",
    "blockedAmount"
  ],
  "properties": {
    "X-Correlation-ID": {
      "type": "string",
      "title": "X-Correlation-ID",
      "description": "Correlation identifier"
    },
    "accountId": {
      "type": "string",
      "title": "accountId",
      "description": "Internal account identification."
    },
    "accountKind": {
      "description": "Account kind.",
      "type": "string",
      "title": "accountKind",
      "minLength": 3,
      "maxLength": 3,
      "enum": [
        "CUA",
        "CCR",
        "LOA",
		"RDA",
		"NWB",
		"CRD"
      ]
    },
    "eventTimestamp": {
      "title": "Event timestamp",
      "description": "Date and time of inserting into event table in BISQ",
      "type": "string",
      "format": "date-time"
    },
    "actualBalance": {
      "type": "number",
      "title": "actualBalance",
      "description": "Actual accounting balance"
    },
    "availableBalance": {
      "type": "number",
      "title": "availableBalance",
      "description": "Actual available balance"
    },
    "blockedAmount": {
      "type": "number",
      "title": "blockedAmount",
      "description": "Blocked amount"
    },
    "effectiveFrom": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time",
      "title": "effectiveFrom",
      "description": "Date of loading the balance (account)"
    }
  }
}