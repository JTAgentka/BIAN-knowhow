{
    "title": "Notices",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Notices",
    "type": "object",
    "required": [
        "terminationId",
		"depositIdPc",
		"eventTimestamp",
		"finalNotice",
		"terminationAmount",
		"currency",
		"createdDate",
		"beginDate",
		"terminationDate",
		"state"
    ],
    "properties": {
        "X-Correlation-ID": {
            "type": [
                "string",
                "null"
            ],
            "title": "X-Correlation-ID"
        },
        "terminationId": {
            "type": "string",
            "title": "Unique Id of termination."
        },
        "depositIdPc": {
            "type": "string",
            "title": "Deposit Id - connection to deposits."
        },
        "eventTimestamp": {
            "title": "Event timestamp",
            "description": "Date and time of inserting into event table in BISQ",
            "type": "string",
            "format": "date-time"
        },
        "finalNotice": {
            "type": "string",
            "title": "Notice type",
            "enum": [
                "Y",
                "N"
            ]
        },
        "terminationAmount": {
            "type": "number",
            "title": "Total termination amount."
        },
        "currency": {
            "type": "string",
            "title": "Notice currency - 3 character currency code according to ISO 4217",
            "minLength": 3,
            "maxLength": 3
        },
        "createdDate": {
            "type": "string",
            "format": "date",
            "title": "Date of creation"
        },
        "beginDate": {
            "type": "string",
            "format": "date",
            "title": "Date from when notice starts running."
        },
        "terminationDate": {
            "type": "string",
            "format": "date",
            "title": "Date of realisation (date of payment)."
        },
        "state": {
            "type": "string",
            "title": "Notice state",
            "enum": [
                "A",
                "O",
                "C"
            ]
        },
        "realised": {
            "type": [
                "string",
                "null"
            ],
            "title": "Realisation indicator: Y = Realized, C = Cancelled, S = Storno",
            "enum": [
                "Y",
                "C",
                "S"
            ]
        },
        "noteForRecipient": {
            "type": [
                "string",
                "null"
            ],
            "title": "Note for recipient.",
            "maxLength": 140
        },
        "activityId": {
            "type": [
                "string",
                "null"
            ],
            "title": "Quaestor payment activity ID."
        },
        "payoffAccount": {
            "$ref": "#/definitions/payoffAccount"
        }
    },
    "definitions": {
        "payoffAccount": {
            "type": "object",
            "properties": {
                "accountId": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Unique identifier of account."
                },
                "accountNumberPrefix": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Account prefix in BBAN format."
                },
                "accountNumber": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Account number in BBAN format."
                },
                "bankCode": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Code of the bank"
                },
                "iban": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Account number in IBAN format."
                },
                "bic": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "BIC code"
                },
                "address": {
                    "$ref": "#/definitions/address"
                }
            }
        },
        "address": {
            "type": "object",
            "properties": {
                "name": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "maxLength": 35,
                    "description": "Name"
                },
                "address1": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "maxLength": 35,
                    "description": "Address line 1"
                },
                "address2": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "maxLength": 35,
                    "description": "Address line 2"
                },
                "address3": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "maxLength": 35,
                    "description": "Address line 3"
                },
                "country": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Alphabetic country ISO code."
                }
            }
        }
    }
}