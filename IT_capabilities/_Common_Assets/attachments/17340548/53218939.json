{
	"title": "Attendance",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"description": "Informace o docházce zaměstnanců",
	"required": [
		"txnId",
		"passageDateTime",
		"employeeNumber",
		"cardScanLocation",
		"firstName",
		"lastName",
		"cardNumber"
	],
	"properties": {
		"txnId": {
			"type": "string",
			"description": "Identifikace záznamu ve zdrojové tabulce."
		},
		"passageDateTime": {
			"type": "string",
			"format": "date-time",
			"description": "Datum a čas průchodu zaměstnance."
		},
		"employeeNumber": {
			"type": "string",
			"minLength": 1,
			"maxLength": 128,
			"description": "Identifikace zaměstnance, který čtečku použil."
		},
		"cardScanLocation": {
			"type": "string",
			"description": "Místo průchodu čtečkou."
		},
		"firstName": {
			"type": "string",
			"description": "Jméno zaměstnance, který použil čtečku."
		},
		"lastName": {
			"type": "string",
			"description": "Příjmení zaměstnance, který použil čtečku."
		},
		"cardNumber": {
			"type": "string",
			"description": "Identifikátor čtečky."
		}
	}
}