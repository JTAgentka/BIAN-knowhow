{
  "title": "billOfExchange",
  "description": "Bill of exchange operations",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "confirmationId",
    "owner",
    "confirmationTypeId",
    "documentLanguage",
    "generatedDate",
    "insertedDate",
    "businessChangeDate",
    "stateId",
    "billOfExchange"
  ],
  "properties": {
    "X-Correlation-ID": {
      "description": "Korelační identifikátor, povinné pro INIT a RECON",
      "type": [
        "string",
        "null"
      ]
    },
    "confirmationId": {
      "type": "integer",
      "description": "Id dokumentu"
    },
    "owner": {
      "type": "object",
      "description": "Detaily vlastníka",
      "$ref": "#/definitions/person"
    },
    "portfolioIds": {
      "type": "object",
      "description": "Identifikátory portfolia",
      "$ref": "#/definitions/portfolioIds"
    },
    "confirmationTypeId": {
      "description": "Hodnoty odkazující na typ konfirmace(bis10, ocp01,ocp03, ocp04, ocp06, ocp08, ocp10, ocp12, ocp13, ocp14, ocp24, ocp37, ocp39, ocp40, ocp41, ocp43, ocp44, ocp45, ocp46)",
      "type": "string"
    },
    "documentLanguage": {
      "description": "Jazyk dokumentu - CZE, ENG, SLO",
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "generatedDate": {
      "description": "čas vygenerování dokumentu",
      "type": "string",
      "format": "date-time"
    },
    "insertedDate": {
      "description": "čas vložení záznamu do db",
      "type": "string",
      "format": "date-time"
    },
    "businessChangeDate": {
      "description": "Poslední změna statusu",
      "type": "string",
      "format": "date-time"
    },
    "stateId": {
      "description": "status zpracování - status=9(posláno do CRM)  nebo 10 (chyba), ostatní nejsou relevantní",
      "type": "integer"
    },
    "files": {
      "description": "Soubory které jsou součástí výpisu",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "required": [
          "contentType",
          "fileName"
        ],
        "properties": {
          "contentType": {
            "description": "Typ obsahu",
            "type": "string",
            "minLength": 0,
            "maxLength": 20
          },
          "fileName": {
            "description": "Jméno souboru",
            "type": "string",
            "minLength": 0,
            "maxLength": 100
          }
        }
      }
    },
    "billOfExchange": {
      "type": "object",
      "required": [
        "noteOperation"
      ],
      "properties": {
        "newOrChangeLabel": {
          "description": "popis zda se jedná ozměnovou konfirmaci v jazyce klienta",
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "maxLength": 30
        },
        "newOrChange": {
          "description": "NEW/CHANGE - jestli mění stávající konfirmaci",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "NEW",
            "CHANGE",
            null
          ]
        },
        "managingCompanyTag": {
          "description": "Příslušnost portfolia ke společnosti - barva klienta. silver - J&T ČR, green - J&T SR",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "SILVER",
            "GREEN",
            null
          ]
        },
        "accountType": {
          "description": "typ účtu, jaký účet IU TU",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "IU",
            "TU",
            null
          ]
        },
        "supplementaryCustody": {
          "description": "identifikace zda je směnka v úschově",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "Y",
            "N",
            null
          ]
        },
        "noteOperation": {
          "type": "object",
          "description": "směnkové programy (nákup směnky, rubopis, převod, splacení), samostatné úschovy listinných cenných papírů (CP) mimo směnkové programy",
          "$ref": "#/definitions/noteOperation"
        },
        "noteOperationSupplementaryCustody": {
          "type": "object",
          "description": "úschova související se směnkovými programy",
          "$ref": "#/definitions/noteOperationSupplementaryCustody"
        }
      }
